<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="326.0" prefWidth="403.0" style="-fx-background-color: #FAFAFA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SearchMedicinesController">
   <children>
      <TextField fx:id="searchField" layoutX="113.0" layoutY="43.0" promptText="Search Medicines" />
      <Button layoutX="298.0" layoutY="43.0" onAction="#searchMedicines" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Search" />
      <ListView fx:id="medicinesListView" layoutX="50.0" layoutY="80.0" onMouseClicked="#onMedicineSelected" prefHeight="200.0" prefWidth="300.0" />
      
      <!-- Order Medicine Button -->
      <Button fx:id="placeOrderButton" layoutX="49.0" layoutY="286.0" onAction="#placeOrder" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Order Medicine" visible="false" />
      
      <!-- Add to Wishlist Button -->
      <Button fx:id="addToWishlistButton" onAction="#addToWishlist" text="Add to Wishlist" visible="false" style="-fx-background-color: #FF9800; -fx-text-fill: white;" layoutX="238.0" layoutY="286.0" />

      <!-- Back to Dashboard Button -->
      <Button layoutX="14.0" layoutY="14.0" onAction="#goBack" prefHeight="0.0" prefWidth="118.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Back to Dashboard">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
   </children>
</AnchorPane>

