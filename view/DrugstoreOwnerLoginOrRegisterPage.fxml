<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #BBDEFB);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DrugstoreOwnerLoginOrRegisterController">
   <children>
      <!-- Title -->
      <Label layoutX="60.0" layoutY="30.0" text="Drugstore Owner Portal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill:#0D47A1;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#44474F"/>
         </effect>
      </Label>

      <!-- Login Button -->
      <Button layoutX="100.0" layoutY="100.0" onAction="#goToLogin" text="Login" prefWidth="200.0" style="-fx-background-color: #5865F2; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#798EF8"/>
         </effect>
      </Button>

      <!-- Register Button -->
      <Button layoutX="100.0" layoutY="160.0" onAction="#goToRegister" text="Register" prefWidth="200.0" style="-fx-background-color: #57F287; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#79F6A2"/>
         </effect>
      </Button>

      <!-- Go Back Button -->
      <Button layoutX="100.0" layoutY="220.0" onAction="#goBackToMainPage" text="Go Back to Main Page" prefWidth="200.0" style="-fx-background-color: #ED4245; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#F57C82"/>
         </effect>
      </Button>
   </children>
</AnchorPane>
