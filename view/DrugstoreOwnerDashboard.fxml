<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="250.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #BBDEFB);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DrugstoreOwnerDashboardController">
   <children>
      <!-- Title Label -->
      <Label layoutX="75.0" layoutY="10.0" prefHeight="34.0" prefWidth="200.0" text="Drugstore Owner " textAlignment="CENTER" style="-fx-text-fill: #0D47A1; -fx-font-weight: bold;">
         <font>
            <Font size="18.0" />
         </font>
         <effect>
            <DropShadow radius="3" offsetX="1" offsetY="1" color="#90CAF9"/>
         </effect>
      </Label>

      <!-- Manage Pharmacy Button -->
      <Button layoutX="80.0" layoutY="60.0" onAction="#managePharmacy" text="Manage Pharmacy" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;" prefWidth="140.0">
         <effect>
            <DropShadow radius="3" offsetX="1" offsetY="2" color="#BBDEFB"/>
         </effect>
      </Button>
      
      <!-- View Orders Button -->
      <Button layoutX="80.0" layoutY="105.0" onAction="#viewOrders" text="View Orders" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;" prefWidth="140.0">
         <effect>
            <DropShadow radius="3" offsetX="1" offsetY="2" color="#BBDEFB"/>
         </effect>
      </Button>
      
      <!-- View Feedback Button -->
      <Button layoutX="80.0" layoutY="150.0" onAction="#viewFeedback" text="View Feedback" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;" prefWidth="140.0">
         <effect>
            <DropShadow radius="3" offsetX="1" offsetY="2" color="#BBDEFB"/>
         </effect>
      </Button>

      <!-- Logout Button -->
      <Button layoutX="50.0" layoutY="200.0" onAction="#logout" text="Logout" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;" prefWidth="200.0">
         <effect>
            <DropShadow radius="3" offsetX="1" offsetY="2" color="#FFCDD2"/>
         </effect>
      </Button>
   </children>
</AnchorPane>
