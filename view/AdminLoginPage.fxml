<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #BBDEFB);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminLoginController">
   <children>
      <!-- Title -->
      <Label layoutX="120.0" layoutY="20.0" text="Admin Login" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#90CAF9"/>
         </effect>
      </Label>

      <!-- Username Field -->
      <TextField fx:id="usernameField" layoutX="100.0" layoutY="80.0" promptText="Enter your username" prefWidth="200.0" style="-fx-background-radius: 10; -fx-padding: 5;">
         <effect>
            <DropShadow radius="2.0" offsetX="0.5" offsetY="0.5" color="#B3E5FC"/>
         </effect>
      </TextField>

      <!-- Password Field -->
      <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="140.0" promptText="Enter your password" prefWidth="200.0" style="-fx-background-radius: 10; -fx-padding: 5;">
         <effect>
            <DropShadow radius="2.0" offsetX="0.5" offsetY="0.5" color="#B3E5FC"/>
         </effect>
      </PasswordField>

      <!-- Login Button -->
      <Button layoutX="100.0" layoutY="200.0" onAction="#login" text="Login" prefWidth="200.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#64B5F6"/>
         </effect>
      </Button>

      <!-- Back Button -->
      <Button layoutX="100.0" layoutY="260.0" onAction="#goBackToMainPage" text="Go Back to Main Page" prefWidth="200.0" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#FFAB91"/>
         </effect>
      </Button>
   </children>
</AnchorPane>
