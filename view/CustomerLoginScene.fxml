<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #BBDEFB);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerLoginSceneController">
   <children>
      <!-- Title Label -->
      <Label layoutX="115.0" layoutY="30.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Customer Login">
         <effect>
            <DropShadow radius="2.0" offsetX="1.0" offsetY="1.0" color="#90CAF9"/>
         </effect>
      </Label>

      <!-- Username Label and Text Field -->
      <Label layoutX="60.0" layoutY="90.0" style="-fx-font-size: 14px; -fx-text-fill: #0D47A1;" text="Username:" />
      <TextField fx:id="usernameField" layoutX="140.0" layoutY="85.0" prefWidth="150.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #90CAF9;" />

      <!-- Password Label and Password Field -->
      <Label layoutX="60.0" layoutY="140.0" style="-fx-font-size: 14px; -fx-text-fill: #0D47A1;" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="140.0" layoutY="135.0" prefWidth="150.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #90CAF9;" />

      <!-- Login Button -->
      <Button layoutX="120.0" layoutY="200.0" onAction="#login" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;">
         <effect>
            <DropShadow radius="2.0" offsetX="1.0" offsetY="1.0" color="#A5D6A7"/>
         </effect>
         <text>Login</text>
      </Button>

      <!-- Back Button -->
      <Button layoutX="20.0" layoutY="20.0" onAction="#goBack" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-background-radius: 15;">
         <effect>
            <DropShadow radius="2.0" offsetX="1.0" offsetY="1.0" color="#FFAB91"/>
         </effect>
         <text>Back</text>
      </Button>
   </children>
</AnchorPane>
