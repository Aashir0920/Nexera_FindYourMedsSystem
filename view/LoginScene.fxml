<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #BBDEFB);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginSceneController">
   <children>
      <!-- Title Label -->
      <Label layoutX="50.0" layoutY="30.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Welcome to the Login Page">
         <effect>
            <DropShadow radius="3.0" offsetX="1.0" offsetY="1.0" color="#90CAF9"/>
         </effect>
      </Label>

      <!-- Login Button -->
      <Button layoutX="140.0" layoutY="90.0" onAction="#goToLogin" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 25;">
         <effect>
            <DropShadow radius="2.0" offsetX="1.0" offsetY="1.0" color="#A5D6A7"/>
         </effect>
         <text>Login</text>
      </Button>

      <!-- Register Button -->
      <Button layoutX="140.0" layoutY="160.0" onAction="#goToRegistration" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 25;">
         <effect>
            <DropShadow radius="2.0" offsetX="1.0" offsetY="1.0" color="#64B5F6"/>
         </effect>
         <text>Register</text>
      </Button>

      <!-- Go Back to Main Page Button -->
      <Button layoutX="90.0" layoutY="230.0" onAction="#goBackToMainPage" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20;">
         <effect>
            <DropShadow radius="2.0" offsetX="1.0" offsetY="1.0" color="#FFAB91"/>
         </effect>
         <text>Go Back to Main Page</text>
      </Button>
   </children>
</AnchorPane>
