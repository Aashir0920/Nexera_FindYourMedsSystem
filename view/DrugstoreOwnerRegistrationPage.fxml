<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #FAFAFA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DrugstoreOwnerRegisterController">
   <children>
      <TextField fx:id="nameField" layoutX="100.0" layoutY="40.0" promptText="Name" prefWidth="200.0"/>
      <TextField fx:id="emailField" layoutX="100.0" layoutY="100.0" promptText="Email" prefWidth="200.0"/>
      <TextField fx:id="contactInfoField" layoutX="100.0" layoutY="160.0" promptText="Contact Info" prefWidth="200.0"/>
      <TextField fx:id="businessLicenseField" layoutX="100.0" layoutY="220.0" promptText="Business License" prefWidth="200.0"/>
      <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="280.0" promptText="Password" prefWidth="200.0"/>
      <PasswordField fx:id="confirmPasswordField" layoutX="100.0" layoutY="340.0" promptText="Confirm Password" prefWidth="200.0"/>
      
      <Button fx:id="registerButton" layoutX="100.0" layoutY="400.0" onAction="#register" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" prefWidth="200.0"/>
      <Button layoutX="100.0" layoutY="440.0" onAction="#goBackToLoginOrRegister" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Go Back" prefWidth="200.0"/>
      
      <Label fx:id="confirmationMessageLabel" layoutX="100.0" layoutY="480.0" text="" prefWidth="200.0"/>
   </children>
</AnchorPane>
