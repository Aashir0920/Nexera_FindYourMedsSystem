<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #BBDEFB, #E3F2FD);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DrugstoreOwnerLoginController">
   <children>
      <TextField fx:id="usernameField" layoutX="100.0" layoutY="60.0" promptText="Username" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #90CAF9; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"/>
      <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="120.0" promptText="Password" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #90CAF9; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"/>
      <Button layoutX="100.0" layoutY="180.0" onAction="#login" text="Login" prefWidth="200.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
      <Button layoutX="100.0" layoutY="230.0" onAction="#goBackToLoginOrRegister" text="Go Back to Login/Register" prefWidth="200.0" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"/>
   </children>
</AnchorPane>
