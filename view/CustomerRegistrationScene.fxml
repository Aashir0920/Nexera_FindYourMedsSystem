<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #FAFAFA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerRegistrationController">
   <children>
      <Label layoutX="50.0" layoutY="50.0" text="Full Name:" />
      <TextField fx:id="fullNameField" layoutX="150.0" layoutY="50.0" />

      <Label layoutX="50.0" layoutY="100.0" text="Email:" />
      <TextField fx:id="emailField" layoutX="150.0" layoutY="100.0" />

      <Label layoutX="50.0" layoutY="150.0" text="Contact Info:" />
      <TextField fx:id="contactField" layoutX="150.0" layoutY="150.0" />

      <Label layoutX="50.0" layoutY="200.0" text="Address:" />
      <TextField fx:id="addressField" layoutX="150.0" layoutY="200.0" />

      <Label layoutX="50.0" layoutY="250.0" text="Password:" />
      <TextField fx:id="passwordField" layoutX="150.0" layoutY="250.0" />

      <Button layoutX="240.0" layoutY="320.0" onAction="#registerUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" />
   </children>
</AnchorPane>
