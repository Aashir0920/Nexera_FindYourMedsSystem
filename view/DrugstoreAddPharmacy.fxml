   <children>
      <Label layoutX="50.0" layoutY="30.0" text="Pharmacy Name:" />
      <TextField fx:id="nameField" layoutX="150.0" layoutY="25.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="80.0" text="Location:" />
      <TextField fx:id="locationField" layoutX="150.0" layoutY="75.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="130.0" text="Contact Info:" />
      <TextField fx:id="contactField" layoutX="150.0" layoutY="125.0" prefWidth="200.0" />

      <Button layoutX="150.0" layoutY="200.0" onAction="#addPharmacy" text="Add Pharmacy" />
   </children>
</AnchorPane>
